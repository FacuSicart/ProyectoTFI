<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm", style="background-color: orange;">        
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                <img src="~/Images/EIBLUEWHITE.png" alt="" height="24" class="d-inline-block align-text-top">
                Educar Igualdad
            </a>
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Alternar navegación" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="float-end">
                <ul class="navbar-nav flex-grow-1">
                    <li style=" margin-right: 45px; font-weight: bold; font-size: 16px; ">@Html.ActionLink("Nosotros", "About", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li style="margin-right: 45px; font-weight: bold; font-size: 16px; ">@Html.ActionLink("Donaciones", "RealizarDonacion", "Donacion", new { area = "" }, new { @class = "nav-link" })</li>
                    <li style="margin-right: 45px; font-weight: bold; font-size: 16px; ">@Html.ActionLink("Crear Cuenta", "CrearAlumno", "Usuario", new { area = "" }, new { @class = "nav-link" })</li>
                    <li style="margin-right: 45px; font-weight: bold; font-size: 16px; ">@Html.ActionLink("Iniciar Sesión", "Login", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Educar Igualdad</p>
        </footer>
    </div>   

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

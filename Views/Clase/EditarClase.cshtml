@model ProyectoTFI.Models.ClaseViewModel

@{
    ViewBag.Title = "Editar Clase";
    Layout = "~/Views/Shared/_LayoutInterno.cshtml";
}

<h4>Editar Clase</h4>
<h5>Curso: @Model.CursoNombre</h5>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.Hidden("CursoID", Model.CursoID)
    @Html.Hidden("CursoNombre", Model.CursoNombre)

    <div class="form-horizontal">
        <hr />
        <div class="" style="background-color: antiquewhite; border-radius:10px;padding:10px;">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.Titulo, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Titulo, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Titulo, "", new { @class = "text-danger" })
                </div>
            </div>
            <br />
            <div class="form-group">
                @Html.LabelFor(model => model.Descripcion, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.Descripcion, new { @class = "form-control", @rows = 4 })
                    @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
                </div>
            </div>
            <br />
            <div class="form-group">
                @Html.LabelFor(model => model.LinkVideo, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input type="url" id="LinkVideo" name="LinkVideo" pattern="https?://(?:www\.)?youtube\.com/watch\?v=[\w-]{11}" title="Link del video" class="form-control" value="@Model.LinkVideo" />
                    @Html.ValidationMessageFor(model => model.LinkVideo, "", new { @class = "text-danger" })
                </div>
            </div>
            <br />
            <div class="row gy-5">
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        @*@Html.ActionLink("Agregar", "AgregarClase", "Clase", new { pCursoID = ViewBag.CursoID }, new { @class = "btn btn-success" })*@
                        <input type="submit" value="Editar" id="btnSubmit" class="btn btn-success" />
                        @Html.ActionLink("Cancelar", "VerClasesCurso", "Curso", new { id = Model.CursoID, NombreCurso = Model.CursoNombre }, new { @class = "btn btn-success", style = "background-color: #DC143C; border-color: #DC143C; color: #fff;", onmouseover = "this.style.backgroundColor='#DC143C'; this.style.borderColor='#5cb85c';", onmouseout = "this.style.backgroundColor='#DC143C'; this.style.borderColor='#DC143C';" })
                    </div>
                </div>
            </div>
        </div>
    </div>
}


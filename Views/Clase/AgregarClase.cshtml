@model ProyectoTFI.Models.ClaseViewModel

@{
    ViewBag.Title = "Agregar Clase";
    Layout = "~/Views/Shared/_LayoutInterno.cshtml";
}

<h2>Agregar Clase</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>ClaseViewModel</h4>
    <hr />
    <div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Descripcion, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.LinkVideo, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="url" id="LinkVideo" name="LinkVideo" pattern="https?://(?:www\.)?youtube\.com/watch\?v=[\w-]{11}" title="Link del video" class="form-control" />
                @Html.ValidationMessageFor(model => model.LinkVideo, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
    </div>
        <div class="row gy-5">
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Registrar" id="btnSubmit" class="btn btn-success" />
                    @Html.ActionLink("Cancelar", "VerClasesCurso", "Curso", new { id = (int)Session["Curso"] }, new { @class = "btn btn-success", style = "background-color: #DC143C; border-color: #DC143C; color: #fff;", onmouseover = "this.style.backgroundColor='#DC143C'; this.style.borderColor='#5cb85c';", onmouseout = "this.style.backgroundColor='#DC143C'; this.style.borderColor='#DC143C';" })
                </div>
            </div>
        </div>
    </div>
    }


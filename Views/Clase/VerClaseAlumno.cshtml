@model ProyectoTFI.Models.ClaseViewModel

@{
    ViewBag.Title = "Ver Clase";
    Layout = "~/Views/Shared/_LayoutInterno.cshtml";
}

<h4>Clase: @Model.Titulo</h4>
<h5>Curso: @Model.CursoNombre</h5>

<div>
    <hr />
    @Html.ActionLink("Volver", "VerClasesCursoAlumno", "Curso", new { id = Model.CursoID, NombreCurso = Model.CursoNombre }, new { @class = "btn btn-success", @style = "margin-bottom: 5px;" })
    @Html.ActionLink("Anterior", "VerClaseAlumno", "Clase", new { id = (int)Model.ClaseAnteriorID, Orden = "anterior" }, new { @class = "btn btn-success", @style = "margin-bottom: 5px;" })
    @Html.ActionLink("Siguiente", "VerClaseAlumno", "Clase", new { id = (int)Model.ID, Orden = "siguiente" }, new { @class = "btn btn-success", @style = "margin-bottom: 5px;" })

    <dl class="dl-horizontal" style=" border: 1px solid #ccc; padding: 10px; border-radius: 5px;">
        @if (Model.LinkVideo != "")
        {
            <dd>
                <div style="display: flex; justify-content: center;">
                    <iframe width="500" height="375" src="@Model.LinkVideo.Replace("watch?v=", "embed/")" frameborder="0" allowfullscreen></iframe>
                </div>
            </dd>
        }
        <br />
        <dd>
            <div style="background-color: #f5f5f5; padding: 10px; border-radius: 5px; font-size: 16px;">
                @Html.DisplayFor(model => model.Descripcion)
            </div>

        </dd>
    </dl>
</div>

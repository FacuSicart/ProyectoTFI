@model ProyectoTFI.Models.Solicitud_MensajeViewModel

@{ ViewBag.Title = "Agregar Mensaje";
    Layout = "~/Views/Shared/_LayoutInterno.cshtml"; }

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Agregar Mensaje</title>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.RespuestaAdministrador)
</head>
<body>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <h4>Enviar Solicitud</h4>
            <hr />
            <div class="" style="background-color: antiquewhite; border-radius:10px;padding:10px;">
                @if (ViewData["ErrorMensaje"] != null)
                {
                    <div class="alert alert-danger" role="alert">
                        @ViewData["ErrorMensaje"]
                    </div>
                }
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })               
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            @Html.LabelFor(model => model.DescripcionAlumno, htmlAttributes: new { @class = "control-label" })
                            <div class="col-lg-12">
                                @Html.TextAreaFor(model => model.DescripcionAlumno, new { @class = "form-control", @rows = 4 })
                                @*<textarea id="Descripcion" name="Descripcion" rows="4" class="form-control"></textarea>*@
                                @Html.ValidationMessageFor(model => model.DescripcionAlumno, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
                <br />
                <div class="row gy-5">
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Enviar" id="btnSubmit" class="btn btn-success" />
                            @Html.ActionLink("Volver", "Detalle", "Solicitud_Mensaje", new { area = "", id = ViewBag.MensajeID }, new { @class = "btn btn-success" })
                            @*@Html.ActionLink("Enviar", "Ver", "Solicitud_Mensaje", new { area = "", solicitudId = ViewBag.SolicitudID }, new { @class = "btn btn-success" })*@
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    <script type="text/javascript">
        function validateInput() {

        }

        $('#btnSubmit').click(function () {
            $.ajax({

            });
        });
    </script>
</body>

</html>
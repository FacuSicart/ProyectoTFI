@model ProyectoTFI.Models.CursoViewModel

@{
    ViewBag.Title = "Inscribirse en Curso";
    Layout = "~/Views/Shared/_LayoutInterno.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Inscribirse en Curso</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.ID)
        @Html.HiddenFor(model => model.Activo)

        <div class="" style="background-color: antiquewhite; border-radius:10px;padding:10px;">
            @if (ViewData["ErrorMensaje"] != null)
            {
                <div class="alert alert-danger" role="alert">
                    @ViewData["ErrorMensaje"]
                </div>
            }
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "control-label" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Descripcion, htmlAttributes: new { @class = "control-label" })
                        <div class="col-md-10">
                            @Html.TextAreaFor(model => model.Descripcion, new { @class = "form-control", @disabled = "disabled", @rows = 4 })
                        </div>
                    </div>
                </div>
            </div>
            <br />
            <div class="row gy-5">
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Inscribirme" id="btnSubmit" class="btn btn-success" />
                        @*@Html.ActionLink("Registrar", "RegistrarCurso", "Curso", new { area = "", id = Model.ID }, new { @class = "btn btn-success" })*@
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

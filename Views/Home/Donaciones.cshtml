@model ProyectoTFI.Entities.Donacion

@{
    ViewBag.Title = "Realizar Donacion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Donaciones</title>
</head>
<body>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <h4>Donaciones</h4>
            <hr />
            <div class="" style="background-color: antiquewhite; border-radius: 10px; padding:10px;">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.NombreEmpresa, htmlAttributes: new { @class = "control-label" })
                            <div class="col-md-10">
                                @Html.ValidationMessageFor(model => model.NombreEmpresa, "", new { @class = "text-danger" })
                                @Html.EditorFor(model => model.NombreEmpresa, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label " })
                            <div class="col-md-10">
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.PrefijoTelefono, htmlAttributes: new { @class = "control-label" })
                            <div class="col-md-10">
                                @Html.ValidationMessageFor(model => model.PrefijoTelefono, "", new { @class = "text-danger" })
                                @Html.EditorFor(model => model.PrefijoTelefono, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Telefono, htmlAttributes: new { @class = "control-label" })
                            <div class="col-md-10">
                                @Html.ValidationMessageFor(model => model.Telefono, "", new { @class = "text-danger" })
                                @Html.EditorFor(model => model.Telefono, new { htmlAttributes = new { @class = "form-control"} })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Monto, htmlAttributes: new { @class = "control-label " })
                            <div class="col-md-10">
                                @Html.ValidationMessageFor(model => model.Monto, "", new { @class = "text-danger" })
                                @Html.EditorFor(model => model.Monto, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Tarjeta.Tipo, htmlAttributes: new { @class = "control-label " })
                            <div class="col-md-10">
                                @*@Html.RadioButtonFor(model => model.Tarjeta.Tipo, new { htmlAttributes = new { @class = "form-control" } })*@
                                @Html.RadioButton("TipoTarjeta", "0", true) Débito<br />
                                @Html.RadioButton("TipoTarjeta", "1", false) Crédito
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Tarjeta.Numero, htmlAttributes: new { @class = "control-label" })
                            <div class="col-md-10">
                                @Html.ValidationMessageFor(model => model.Tarjeta.Numero, "", new { @class = "text-danger" })
                                @Html.EditorFor(model => model.Tarjeta.Numero, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Tarjeta.FechaCaducidad, htmlAttributes: new { @class = "control-label" })
                            <div class="col-md-10">
                                @Html.ValidationMessageFor(model => model.Tarjeta.FechaCaducidad, "", new { @class = "text-danger" })
                                @Html.EditorFor(model => model.Tarjeta.FechaCaducidad, new { htmlAttributes = new { @class = "form-control"} })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Tarjeta.CVV, htmlAttributes: new { @class = "control-label" })
                            <div class="col-md-10">
                                @Html.ValidationMessageFor(model => model.Tarjeta.CVV, "", new { @class = "text-danger" })
                                @Html.EditorFor(model => model.Tarjeta.CVV, new {htmlAttributes = new { @class = "form-control" } } )
                            </div>
                        </div>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Donar" id="btnSubmit" class="btn btn-success" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</body>

</html>